<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  	<display-name>Weather Web Application</display-name>
  	<servlet>
  		<display-name>front</display-name>
    	<servlet-name>FrontControllerServlet</servlet-name>
    	<servlet-class>controller.FrontControllerServlet</servlet-class>
  	</servlet>
  	<servlet-mapping>
   	 	<servlet-name>FrontControllerServlet</servlet-name>
    	<url-pattern>/FrontControllerServlet</url-pattern>
  	</servlet-mapping>
  	<welcome-file-list>
    	<welcome-file>authorization.html</welcome-file>
	</welcome-file-list>
</web-app>
